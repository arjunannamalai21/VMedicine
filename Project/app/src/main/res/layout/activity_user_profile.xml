<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Medical Profile"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/tvCurrentUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID: Loading..."
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etUserAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 30"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Conditions (comma-separated):"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etMedicalConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Hypertension, Diabetes"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="2"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergies (comma-separated):"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Penicillin, Sulfa drugs"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="2"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Medications (comma-separated):"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etCurrentMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Lisinopril 10mg, Metformin 500mg"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="3"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textSize="20sp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="6dp"/>

        <!-- NEW LOGOUT BUTTON -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/rounded_button_background_secondary"
            android:textColor="#000000"
            android:textStyle="bold"
            android:elevation="4dp"/>

    </LinearLayout>
</ScrollView>
