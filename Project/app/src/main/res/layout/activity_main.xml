<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F0F2F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to VMedicine!"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnScanQrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR Code for Medicine"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/btnScanDoctorPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Doctor Prescription"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/btnFindMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Medicine Details"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/btnAiChatBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI Chat Bot"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="6dp"/>

    <Button
        android:id="@+id/btnUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Medical Profile"
        android:textSize="18sp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="@drawable/rounded_button_background_secondary"
        android:textColor="#000000"
        android:textStyle="bold"
        android:elevation="6dp"/>

</LinearLayout>
