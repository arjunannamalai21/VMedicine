<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8"
    tools:context=".PrescriptionReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Parsed Data (Review &amp; Edit):"
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allergies (comma-separated)"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="e.g., Penicillin (rash), Sulfa drugs (nausea)"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Medications (comma-separated)"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etCurrentMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="e.g., Lisinopril 10mg, Metformin 500mg"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Conditions (comma-separated)"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etMedicalConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="e.g., Hypertension, Type 2 Diabetes"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Age"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etUserAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="e.g., 45"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="25dp" />

        <Button
            android:id="@+id/btnConfirmSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm &amp; Save to Profile"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnGoBackRescan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go Back / Re-scan"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/rounded_button_background_secondary"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>